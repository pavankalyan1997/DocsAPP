<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawerLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.pk.docsappnitt.Home">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:background="@drawable/background"
            android:orientation="vertical">


            <ViewFlipper
                android:id="@+id/v_flipper"
                android:layout_width="match_parent"
                android:layout_height="200dp">

            </ViewFlipper>

            <LinearLayout
                android:id="@+id/HealthTips"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="116dp"
                    android:layout_height="111dp"
                    android:layout_gravity="left"
                    android:layout_weight="0"
                    android:padding="25dp"
                    app:srcCompat="@drawable/healthtips" />

                <LinearLayout
                    android:layout_width="267dp"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="Health Tips"
                        android:textColor="@color/common_google_signin_btn_text_dark_default"
                        android:textSize="24sp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="You can see Some Health tips here"
                        android:textColor="@color/common_google_signin_btn_text_dark_default" />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ConsultDoctor"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageView"
                    android:layout_width="116dp"
                    android:layout_height="111dp"
                    android:layout_gravity="left"
                    android:layout_weight="0"
                    android:padding="25dp"
                    app:srcCompat="@drawable/consultdoctoricon1" />

                <LinearLayout
                    android:layout_width="267dp"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/textView2"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="Consult Doctor"
                        android:textColor="@color/common_google_signin_btn_text_dark_default"
                        android:textSize="24sp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Click here to consult your doctor and take appointment "
                        android:textColor="@color/common_google_signin_btn_text_dark_default" />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/Inbox"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="116dp"
                    android:layout_height="111dp"
                    android:layout_gravity="left"
                    android:layout_weight="0"
                    android:padding="25dp"
                    app:srcCompat="@drawable/inboxicon2" />

                <LinearLayout
                    android:layout_width="267dp"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="Inbox"
                        android:textColor="@color/common_google_signin_btn_text_dark_default"
                        android:textSize="24sp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Click here to check your previous consultances  or Your History"
                        android:textColor="@color/common_google_signin_btn_text_dark_default" />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/SentBox"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="116dp"
                    android:layout_height="111dp"
                    android:layout_gravity="left"
                    android:layout_weight="0"
                    android:padding="25dp"
                    app:srcCompat="@drawable/sentboxicon3" />

                <LinearLayout
                    android:layout_width="267dp"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="Sent Box"
                        android:textColor="@color/common_google_signin_btn_text_dark_default"
                        android:textSize="24sp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="You can check your previous consultances and messages here"
                        android:textColor="@color/common_google_signin_btn_text_dark_default" />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
            android:id="@+id/EditProfile"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="116dp"
                android:layout_height="111dp"
                android:layout_gravity="left"
                android:layout_weight="0"
                android:padding="25dp"
                app:srcCompat="@drawable/editprofileicon4" />

            <LinearLayout
                android:layout_width="267dp"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="Edit Profile"
                    android:textColor="@color/common_google_signin_btn_text_dark_default"
                    android:textSize="24sp" />

                <TextView
                    android:id="@+id/textView8"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="You can edit your profile here "
                    android:textColor="@color/common_google_signin_btn_text_dark_default" />

            </LinearLayout>

            </LinearLayout>



        </LinearLayout>



    </ScrollView>
    <android.support.design.widget.NavigationView
        app:headerLayout="@layout/header"
        android:id="@+id/navigationView"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:background="@color/common_google_signin_btn_text_dark_default"
        app:itemTextColor="@color/common_google_signin_btn_text_dark_focused"
        app:menu="@menu/menu_home">

    </android.support.design.widget.NavigationView>
</android.support.v4.widget.DrawerLayout>
