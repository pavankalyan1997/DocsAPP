<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/DrawerLayoutAboutUs"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.pk.docsappnitt.AboutUs">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:background="@drawable/background"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txtAboutUs"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:padding="25dp"
            android:text="Coming Soon"
            android:textColor="@color/common_google_signin_btn_text_dark_default"
            android:textSize="40sp" />
    </LinearLayout>

    <android.support.design.widget.NavigationView
        android:id="@+id/navigationViewAboutUs"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:background="@color/common_google_signin_btn_text_dark_default"
        app:itemTextColor="@color/common_google_signin_btn_text_dark_focused"
        app:menu="@menu/menu_welcome">

    </android.support.design.widget.NavigationView>

</android.support.v4.widget.DrawerLayout>
